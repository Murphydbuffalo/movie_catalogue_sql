<h1> Welcome to the Movie Catalogue! </h1>
<h2> All Movies </h2>
<ul>
  <% @movies.each do |movie| %>
    <li><a href="/movies/<%= movie["id"] %>"> <%= movie["title"] %></a> - <%= movie["year"] %></li>
    <ul>
      <li><%= "#{movie["genre"]}  -  Rating:  #{movie["rating"]}/100" %> </li>
     </ul>
  <% end %>
</ul>  

<nav>
  <ul>
    <li><a href="/movies?page=1"> Home </a></li> 
    <% if @page > 1 %>
      <li> <a href="/movies?page= <%= @page - 1 %>"> Previous Page </a></li>
    <% end %>  
    <li> <a href="/movies?page= <%= @page + 1 %>"> Next Page </a></li>
    <li> <a href="/actors"> All Actors </a> </li>
  </ul>
</nav>